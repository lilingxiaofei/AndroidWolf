    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="金额"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tvCount"
            android:background="@null"
            android:hint="单笔金额不高于500000"
            android:inputType="numberDecimal"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_12sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:textSize="@dimen/text_size_15sp"
        android:text="支付方式"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>

    <RadioGroup
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbBalance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:button="@null"
            android:drawableLeft="@mipmap/pay_wallet"
            android:drawableRight="@drawable/recharge_select"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="余额"
            android:textColor="@color/black" />

        <include layout="@layout/line_horizontal" />

        <RadioButton
            android:id="@+id/rbWx"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:button="@null"
            android:drawableLeft="@mipmap/pay_weixin"
            android:drawableRight="@drawable/recharge_select"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="微信"
            android:textColor="@color/black" />

        <include layout="@layout/line_horizontal" />

        <RadioButton
            android:id="@+id/rbZfb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:button="@null"
            android:drawableLeft="@mipmap/pay_zhifubao"
            android:drawableRight="@drawable/recharge_select"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="支付宝"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/rbYl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:button="@null"
            android:drawableLeft="@mipmap/pay_large"
            android:visibility="gone"
            android:drawableRight="@drawable/recharge_select"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="银联"
            android:textColor="@color/black" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/bg_red_rectangle"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>

</LinearLayout>