<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:minHeight="@dimen/title_bar_height"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:padding="10dp"
            android:src="@mipmap/black_left_arrow_two" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:lines="1"
            android:layout_marginLeft="@dimen/title_bar_height"
            android:layout_marginRight="@dimen/title_bar_height"
            android:gravity="center"
            android:textColor="@color/t_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView android:id="@+id/ivLogo"
        android:layout_width="85dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_small" />
    <com.pkqup.commonlibrary.view.ClearEditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/account_phone"
        android:background="@drawable/bg_round_white_25dp"
        android:hint="手机号码"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:textColorHint="@color/t_red"
        android:inputType="number"
        android:maxLength="11"
        android:layout_below="@+id/ivLogo"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/t_red"
        android:textSize="14sp" />


    <com.pkqup.commonlibrary.view.ClearEditText
        android:id="@+id/etPsd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/account_pwd"
        android:background="@drawable/bg_round_white_25dp"
        android:hint="请输入密码"
        android:drawablePadding="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:textColorHint="@color/t_red"
        android:inputType="textPassword"
        android:layout_below="@+id/etPhone"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/t_red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_below="@+id/etPsd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_red_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/t_white"
        android:textSize="@dimen/sp_big" />

    <RelativeLayout
        android:layout_below="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSmsLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:padding="15dp"
            android:text="短信登录"
            android:textColor="@color/t_red"
            android:textSize="@dimen/sp_small" />
        <TextView
            android:id="@+id/tvForgetPsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:padding="15dp"
            android:text="忘记密码"
            android:textColor="@color/t_red"
            android:textSize="@dimen/sp_small" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首次登录将自动注册"
        android:textColor="@color/t_gray"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />
</RelativeLayout>