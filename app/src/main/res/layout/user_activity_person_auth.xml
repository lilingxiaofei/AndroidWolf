                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    android:text="请将手机横向拍摄以保证图片正常显示"/>
