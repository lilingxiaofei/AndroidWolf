                <TextView
                    android:id="@+id/tvVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="实名认证"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_15sp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvVerified"
                    android:layout_alignBottom="@+id/tvVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:text="(请上传真实的个人信息，认证通过后将无法修改)"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bg_white">

                <TextView
                    android:id="@+id/tvTitleStr"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="姓名"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_mid" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="36dp"
                    android:layout_toRightOf="@id/tvTitleStr"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:textColorHint="@color/t_gray"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bg_gray" />
            </RelativeLayout>



