<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView android:id="@+id/ivCheckPic"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="20dp"
            android:src="@mipmap/pass"/>


        <TextView
            android:id="@+id/tvTipsOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/check_auth_pass_one_company"
            android:textColor="@color/t_grey"
            android:textSize="15sp" />
        <TextView android:id="@+id/tvTipsTwo"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/check_auth_pass_two"
            android:textColor="@color/t_grey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/bg_gray_rectangle"
                android:text="暂时先不考虑"
                android:textColor="@color/t_white"
                android:visibility="gone"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_round_red"
                android:gravity="center"
                android:text="升级星级卖家"
                android:textColor="@color/t_white"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>