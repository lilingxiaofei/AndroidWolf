        <!--<TextView-->
            <!--android:id="@+id/tvPayPrice"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:text="500"-->
            <!--android:textColor="@color/t_white"-->
            <!--android:textSize="13sp" />-->
    </LinearLayout>

</LinearLayout>