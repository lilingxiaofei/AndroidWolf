<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp">
        <LinearLayout android:id="@+id/llContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_dialog_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:text="修改名称"
                android:textColor="#333333"
                android:textSize="15sp" />

            <!--        <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#eeeeee" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="可输入2-7个字的名称，包括特殊符号。"
                android:textColor="@color/t_gray"
                android:textSize="10sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_input_name_bg">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入名称"
                    android:textColorHint="@color/t_gray"
                    android:maxLength="7"
                    android:paddingLeft="10dp"
                    android:textColor="@color/t_red"
                    android:textSize="14sp" />

            </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_gray_rectangle"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/t_white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/bg_red"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/t_white"
            android:textSize="15sp" />
    </LinearLayout>



        </LinearLayout>
        <ImageView android:id="@+id/ivClose"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="9dp"
            android:layout_alignRight="@+id/llContentLayout"
            android:layout_alignTop="@+id/llContentLayout"
            android:src="@mipmap/icon_nav_close_black"
            />
    </RelativeLayout>
</LinearLayout>