                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_alignParentBottom="true"
                            android:background="#99000000"
                            android:gravity="center"
                            android:text="示例图"
                            android:textColor="@color/t_white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlDescTwoPic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_gray_stroke">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="29dp"
                                android:background="@mipmap/camera" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="瓶口水位线"
                                android:textColor="@color/t_gray"
                                android:textSize="@dimen/sp_small" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgDescTwoPic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDeleteDescTwoPic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="-5dp"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/delete_ic"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDescThree"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llDescThreePic"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgDescThreeEx"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/example_detail_three" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_alignParentBottom="true"
                            android:background="#99000000"
                            android:gravity="center"
                            android:text="示例图"
                            android:textColor="@color/t_white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlDescThreePic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_gray_stroke">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="29dp"
                                android:background="@mipmap/camera" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="瓶盖"
                                android:textColor="@color/t_gray"
                                android:textSize="@dimen/sp_small" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgDescThreePic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDeleteDescThreePic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="-5dp"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/delete_ic"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDescFour"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llDescFourPic"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgDescFourEx"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/example_detail_four" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_alignParentBottom="true"
                            android:background="#99000000"
                            android:gravity="center"
                            android:text="示例图"
                            android:textColor="@color/t_white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlDescFourPic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_gray_stroke">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="29dp"
                                android:background="@mipmap/camera" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="瓶底"
                                android:textColor="@color/t_gray"
                                android:textSize="@dimen/sp_small" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgDescFourPic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDeleteDescFourPic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="-5dp"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/delete_ic"
                    android:visibility="gone" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlGoods"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llGoodsPic"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:id="@+id/rlGoodsPic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_gray_stroke">

                        <LinearLayout
                            android:id="@+id/llChoiceGoodsPic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:background="@mipmap/address_add" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="添加商品图片"
                                android:textColor="@color/t_gray"
                                android:textSize="@dimen/sp_small" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgGoodsPic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDeleteGoodsPic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="170dp"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/delete_ic"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvCommit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_red"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/t_white"
        android:textSize="18sp" />

</LinearLayout>