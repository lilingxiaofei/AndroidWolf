<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDelete"
        style="@style/order_btn_gray"
        android:text="删除订单" />
    <TextView
        android:id="@+id/tvCancel"
        style="@style/order_btn_red"
        android:text="取消订单" />

    <TextView
        android:id="@+id/tvRefund"
        style="@style/order_btn_gray"
        android:text="申请退款" />
    <TextView
        android:id="@+id/tvNotGoods"
        style="@style/order_btn_red"
        android:text="无货" />

    <TextView
        android:id="@+id/tvConsentRefund"
        style="@style/order_btn_red"
        android:text="同意退款" />

    <TextView
        android:id="@+id/tvRefusedRefund"
        style="@style/order_btn_gray"
        android:text="拒绝" />

    <TextView
        android:id="@+id/tvReturnSend"
        style="@style/order_btn_gray"
        android:text="退货发货" />
    <TextView
        android:id="@+id/tvBackOutApply"
        style="@style/order_btn_gray"
        android:text="撤销申请" />
    <TextView
        android:id="@+id/tvRefusedApply"
        style="@style/order_btn_gray"
        android:text="拒绝申请" />
    <TextView
        android:id="@+id/tvConsentApply"
        style="@style/order_btn_gray"
        android:text="同意申请" />


    <TextView
        android:id="@+id/tvSendGoods"
        style="@style/order_btn_red"
        android:text="发货" />

    <TextView
        android:id="@+id/tvGoodsSignBill"
        style="@style/order_btn_red"
        android:text="商品签单" />
    <TextView
        android:id="@+id/tvConfirmReceipt"
        style="@style/order_btn_red"
        android:text="确认收货" />

    <TextView
        android:id="@+id/tvEvaluate"
        style="@style/order_btn_red"
        android:text="去评价" />
    <TextView
        android:id="@+id/tvPay"
        style="@style/order_btn_red"
        android:text="去支付" />

    <TextView
        android:id="@+id/tvEditPrice"
        style="@style/order_btn_red"
        android:text="修改出价" />
    <TextView
        android:id="@+id/tvPayDeposit"
        style="@style/order_btn_red"
        android:text="去付订金" />

</LinearLayout>