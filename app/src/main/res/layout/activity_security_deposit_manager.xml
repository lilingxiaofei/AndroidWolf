    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lineaCancelDeposit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/icon_size_32dp"
                android:paddingBottom="@dimen/icon_size_32dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/warn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_padding_12dp"
                    android:text="您确定要撤销保证金吗？" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_padding_12dp"
                android:paddingLeft="@dimen/layout_padding_12dp"
                android:paddingRight="@dimen/layout_padding_12dp"
                android:text="@string/deposit_desc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/layout_padding_12dp"
                    android:background="@drawable/bg_gray_rectangle"
                    android:text="撤销"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="@dimen/layout_padding_12dp"
                    android:background="@drawable/bg_red_rectangle"
                    android:text="不撤销"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaPayDepositSuccess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_padding_32dp"
                android:paddingBottom="@dimen/layout_padding_32dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/publish_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_22dp"
                    android:gravity="center"
                    android:text="@string/deposit_success" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交纳金额：" />

                    <TextView android:id="@+id/tvPaymentMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/bg_red"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnGoPrivilege"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_gray_rectangle"
                        android:paddingLeft="21dp"
                        android:paddingRight="21dp"
                        android:text="查看星级卖家特权"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15sp" />

                    <Button
                        android:id="@+id/btnGoVipCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_red_rectangle"
                        android:paddingLeft="21dp"
                        android:paddingRight="21dp"
                        android:text="返回会员中心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaRefundDeposit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_padding_32dp"
                android:paddingBottom="@dimen/layout_padding_32dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/publish_success" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_22dp"
                    android:gravity="center"
                    android:text="@string/refund_success_desc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancelApply"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_gray_rectangle"
                        android:paddingLeft="21dp"
                        android:paddingRight="21dp"
                        android:text="取消撤销申请"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15sp" />

                    <Button
                        android:id="@+id/btnGoVipCenterS"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_red_rectangle"
                        android:paddingLeft="21dp"
                        android:paddingRight="21dp"
                        android:text="返回会员中心"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>