<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/banner"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="60dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/bg_gray" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/banner"
            android:layout_margin="10dp"
            android:background="@color/bg_white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAuction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIconOne"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/home_auction"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvStrOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="竞拍专区"
                    android:textColor="@color/t_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBuy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIconTwo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/home_buy"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvStrTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我要买酒"
                    android:textColor="@color/t_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIconThree"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/home_sell"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvStrThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我要卖酒"
                    android:textColor="@color/t_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIconFour"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/home_search_chateau"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvStrFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="名庄查询"
                    android:textColor="@color/t_black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEvaluate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgIconFive"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/home_evaluate"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvStrFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="名酒估价"
                    android:textColor="@color/t_black"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="品牌推荐"
            android:textColor="@color/t_black"
            android:textSize="@dimen/text_size_15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_white" />

    </LinearLayout>

</LinearLayout>