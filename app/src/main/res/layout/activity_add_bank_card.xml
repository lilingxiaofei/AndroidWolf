<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical"
    tools:context=".user.activity.AddBankCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <com.pkqup.commonlibrary.view.ClearEditText
            android:id="@+id/edtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入姓名"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="身份证号"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <com.pkqup.commonlibrary.view.ClearEditText
            android:id="@+id/edtIdCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入身份证号"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="银行卡号"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <com.pkqup.commonlibrary.view.ClearEditText
            android:id="@+id/edtBankCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:textColorHint="#999999"
            android:inputType="number"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiChooseBankName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="开户行"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <EditText
            android:id="@+id/edtBankName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请选择开户行"
            android:enabled="false"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/black_right_arrow_two"
            android:layout_marginRight="@dimen/layout_padding_12dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="开户支行"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tvProvince"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="省"
            android:textColor="@color/black"
            android:gravity="right"/>

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="市"
            android:gravity="right"
            android:textColor="@color/black"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </View>

        <!--<EditText-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="3"-->
            <!--android:background="@null"-->
            <!--android:text="请输入姓名"-->
            <!--android:textColorHint="#999999"-->
            <!--android:textSize="@dimen/sp_12" />-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/black_right_arrow_two"
            android:layout_marginRight="@dimen/layout_padding_12dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="  "
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <com.pkqup.commonlibrary.view.ClearEditText
            android:id="@+id/edtBranch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入支行"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="手机号"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <com.pkqup.commonlibrary.view.ClearEditText
            android:id="@+id/edtPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入银行预留手机号"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding_12dp"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp" />

        <com.pkqup.commonlibrary.view.ClearEditText
            android:id="@+id/edtCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12" />
        <Button
            android:id="@+id/btnGetCode"
            android:layout_width="72dp"
            android:background="@drawable/bg_round_red"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            android:text="获取验证码"
            android:layout_height="25dp"
            android:layout_marginRight="@dimen/layout_padding_12dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>

    <Button
        android:id="@+id/btnBindBankCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_size_40dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_round_red"
        android:text="确认绑定"
        android:textColor="@color/white" />
</LinearLayout>