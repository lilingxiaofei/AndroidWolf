<resources>

    <style name="roomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>


    <style name="auctionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/line_vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:background">@color/bg_white</item>
    </style>

    <style name="auctionLabel">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="auctionValue">
        <item name="android:layout_weight">3.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/t_black</item>
    </style>

    <style name="order_left_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="order_left_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="add_goods_label">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="add_goods_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textColorHint">@color/t_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:hint">请选择</item>
    </style>


    <style name="corner_mark">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textColor">@color/t_white</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">-7dp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/cart_num_bg</item>
    </style>

    <style name="order_btn_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">@color/t_red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/bg_round_transparent_red_border_15dp</item>
    </style>

    <style name="order_btn_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">@color/t_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/bg_round_transparent_gray_border_15dp</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="colorControlNormal">@color/t_gray</item>
        <item name="colorControlActivated">@color/bg_yellow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
    </style>
</resources>
